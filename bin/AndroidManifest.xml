<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecil.venue"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
		<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.ecil.venue.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ecil.venue.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.ecil.venue.UserActivity"
            android:label="@string/title_activity_user"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.UsersignActivity"
            android:label="@string/title_activity_usersign"
            android:parentActivityName=".UserActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.VenuesignActivity"
            android:label="@string/title_activity_venuesign"
            android:parentActivityName=".VenueloginActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName=".UserActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.VenueloginActivity"
            android:label="@string/title_activity_venuelogin"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.VenuedetailsActivity"
            android:label="@string/title_activity_venuedetails"
            android:parentActivityName=".VenuesignActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.SampleActivity"
            android:label="@string/title_activity_sample"
            android:parentActivityName=".SearchActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.Venue1Activity"
            android:label="@string/title_activity_venue1"
            android:parentActivityName=".VenueloginActivity" >
        </activity>
        
        <activity
            android:name="com.ecil.venue.VenuebookActivity"
            android:label="@string/title_activity_venuebook" 
            android:parentActivityName=".SearchActivity" >
        </activity>
        <activity
            android:name="com.ecil.venue.UserdetailsActivity"
            android:label="@string/title_activity_userdetails" 
            android:parentActivityName=".SearchActivity" >
        </activity>
       
    </application>

</manifest>
